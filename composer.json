{
    "name": "dutekvejin/transformers",
    "description": "Collection handling in PHP",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "dutekvejin",
        "transformers"
    ],
    "authors": [
        {
            "name": "Dusan Vejin",
            "email": "dutekvejin@gmail.com",
            "homepage": "https://github.com/dutekvejin"
        }
    ],
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "friendsofphp/php-cs-fixer": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "Dutek\\Transformer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dutek\\Transformer\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "cs-fix": "php-cs-fixer fix --config=.php_cs",
        "cs-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
